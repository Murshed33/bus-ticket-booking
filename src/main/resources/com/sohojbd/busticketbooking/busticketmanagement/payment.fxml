<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefWidth="400" prefHeight="350"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.sohojbd.busticketbooking.busticketmanagement.PaymentController">

    <Label text="Payment"
           layoutX="160"
           layoutY="30"
           style="-fx-font-size:18px;"/>

    <Label fx:id="amountLabel"
           layoutX="110"
           layoutY="90"
           style="-fx-font-size:16px;"/>

    <Label text="Payment Method:"
           layoutX="80"
           layoutY="140"/>

    <ChoiceBox fx:id="paymentChoice"
               layoutX="200"
               layoutY="135"/>

    <Label text="Enter PIN:"
           layoutX="80"
           layoutY="190"/>

    <PasswordField fx:id="pinField"
               layoutX="200"
               layoutY="185"
               promptText="4-digit PIN"/>

    <Button text="Confirm Payment"
            layoutX="135"
            layoutY="250"
            onAction="#handleConfirmPayment"/>

</AnchorPane>