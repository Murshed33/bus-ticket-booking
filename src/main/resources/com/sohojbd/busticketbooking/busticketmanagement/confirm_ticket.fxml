<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="400" prefHeight="400"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.sohojbd.busticketbooking.busticketmanagement.ConfirmTicketController">

    <VBox spacing="12" layoutX="50" layoutY="30">

        <Label text="Confirm Ticket"
               style="-fx-font-size:18px; -fx-font-weight:bold;" />

        <Label fx:id="nameLabel"/>
        <Label fx:id="busLabel"/>
        <Label fx:id="routeLabel"/>
        <Label fx:id="dateTimeLabel"/>
        <Label fx:id="seatLabel"/>
        <Label fx:id="priceLabel" style="-fx-text-fill: green; -fx-font-weight: bold;"/>

        <Button text="Back" onAction="#handleBack"/>

    </VBox>
</AnchorPane>